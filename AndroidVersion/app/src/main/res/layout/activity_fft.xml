<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"

                                             tools:context="com.example.bluefish.anydrum.FFTActivity"
                                             android:id="@+id/MainCanvas"
                                             tools:layout_editor_absoluteY="81dp" tools:layout_editor_absoluteX="0dp">

    <com.jjoe64.graphview.GraphView
            android:layout_width="250dp"
            android:layout_height="160dp"
            android:id="@+id/graphViewData"
            android:visibility="visible"
            tools:layout_constraintTop_creator="1" tools:layout_constraintRight_creator="1"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.472"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp" android:layout_marginEnd="8dp"/>
    <com.jjoe64.graphview.GraphView
            android:layout_width="250dp" android:layout_height="160dp"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/graphViewData" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5" android:id="@+id/graphViewFFT"/>
    <Button
            android:text="new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BtnUnlock" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/graphViewFFT" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
    />
    <Button
            android:text="FFT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BtnFFT" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/graphViewFFT" android:layout_marginStart="108dp"
            app:layout_constraintStart_toEndOf="@+id/BtnUnlock"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewMaxima" android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/graphViewFFT" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="75dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="149dp" android:layout_marginEnd="177dp"
            app:layout_constraintEnd_toEndOf="parent"/>


</android.support.constraint.ConstraintLayout>