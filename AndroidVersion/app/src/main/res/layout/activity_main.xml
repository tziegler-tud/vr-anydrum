<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.bluefish.anydrum.MainActivity" android:id="@+id/MainCanvas"
        tools:layout_editor_absoluteY="81dp" tools:layout_editor_absoluteX="0dp">

    <com.jjoe64.graphview.GraphView
            android:layout_width="250dp"
            android:id="@+id/graph"
            android:visibility="visible"
            android:layout_height="172dp"
            tools:layout_editor_absoluteY="112dp" tools:layout_editor_absoluteX="67dp"/>
    <TextView
            android:id="@+id/sensorValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            tools:layout_editor_absoluteY="6dp" tools:layout_editor_absoluteX="0dp"/>
    <Button
            android:text="Snare Drum"
            android:layout_width="120dp"
            android:layout_height="0dp"
            android:id="@+id/btnSnareDrum"
            tools:layout_editor_absoluteY="425dp" tools:layout_editor_absoluteX="132dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline" app:layout_constraintGuide_begin="97dp"
                                          android:orientation="horizontal"
                                          tools:layout_editor_absoluteY="97dp" tools:layout_editor_absoluteX="0dp"/>
    <Button
            android:text="start"
            android:layout_width="88dp"
            android:layout_height="50dp"
            android:id="@+id/btnStart"
            android:layout_marginStart="16dp"
            tools:layout_editor_absoluteY="332dp" tools:layout_editor_absoluteX="148dp"/>
    <Button
            android:text="bass drum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnBassDrum"
            android:layout_marginEnd="9dp"
            tools:layout_editor_absoluteY="425dp" tools:layout_editor_absoluteX="274dp"/>
    <Button
            android:text="hihat drum"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/btnHiHat"
            android:layout_marginStart="12dp"
            tools:layout_editor_absoluteY="425dp" tools:layout_editor_absoluteX="12dp"/>
    <TextView
            android:text="learning time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeHiHat"
            android:layout_marginEnd="3dp"
            tools:layout_editor_absoluteY="478dp" tools:layout_editor_absoluteX="38dp"/>
    <TextView
            android:text="learning time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeSnare"
            android:layout_marginEnd="10dp"
            tools:layout_editor_absoluteY="477dp" tools:layout_editor_absoluteX="162dp"/>
    <TextView
            android:text="learning time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeBass"
            android:layout_marginEnd="12dp"
            tools:layout_editor_absoluteY="478dp" tools:layout_editor_absoluteX="292dp"/>
    <TextView
            android:text="deviation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewStdDeviation"
            android:layout_marginStart="54dp"
            tools:layout_editor_absoluteY="16dp" tools:layout_editor_absoluteX="54dp"/>
    <TextView
            android:text="count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewSensorValuesCount"
            android:layout_marginStart="38dp"
            tools:layout_editor_absoluteY="16dp" tools:layout_editor_absoluteX="149dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:id="@+id/viewInfo"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="21dp"
            tools:layout_editor_absoluteY="307dp" tools:layout_editor_absoluteX="16dp"/>
    <TextView
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewKnockDetected" android:layout_marginStart="38dp"
            tools:layout_editor_absoluteX="16dp" tools:layout_editor_absoluteY="423dp"/>
    <TextView
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewLockState"
            android:layout_marginEnd="56dp"
            tools:layout_editor_absoluteY="373dp" tools:layout_editor_absoluteX="280dp"/>
    <TextView
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ViewLearningState"
            tools:layout_editor_absoluteY="295dp" tools:layout_editor_absoluteX="190dp"/>


</android.support.constraint.ConstraintLayout>
