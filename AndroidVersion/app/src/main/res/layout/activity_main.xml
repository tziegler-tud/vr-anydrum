<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.bluefish.anydrum.MainActivity" android:id="@+id/MainCanvas"
        tools:layout_editor_absoluteY="81dp" tools:layout_editor_absoluteX="0dp">

    <com.jjoe64.graphview.GraphView
            android:layout_width="0dp"
            android:id="@+id/graph"
            android:visibility="visible"
            android:layout_height="172dp"
            tools:layout_constraintTop_creator="1" tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1" android:layout_marginStart="67dp"
            app:layout_constraintBottom_toBottomOf="@+id/viewLockState" android:layout_marginEnd="67dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginTop="106dp"
            tools:layout_constraintLeft_creator="1" android:layout_marginBottom="106dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="@+id/sensorValue"
            android:layout_marginLeft="67dp" android:layout_marginRight="67dp"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:id="@+id/sensorValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            tools:layout_constraintTop_creator="1" android:layout_marginTop="6dp"
            tools:layout_constraintLeft_creator="1" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Snare Drum"
            android:layout_width="120dp"
            android:layout_height="0dp"
            android:id="@+id/btnSnareDrum"
            tools:layout_constraintTop_creator="1" tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1" app:layout_constraintBottom_toBottomOf="@+id/btnHiHat"
            app:layout_constraintRight_toRightOf="parent" tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="@+id/btnHiHat"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline" app:layout_constraintGuide_begin="97dp"
                                          android:orientation="horizontal"
                                          tools:layout_editor_absoluteY="97dp" tools:layout_editor_absoluteX="0dp"/>
    <Button
            android:text="start"
            android:layout_width="88dp"
            android:layout_height="50dp"
            android:id="@+id/btnStart"
            android:layout_marginStart="16dp"
            tools:layout_constraintTop_creator="1" tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/btnSnareDrum" android:layout_marginTop="37dp"
            tools:layout_constraintLeft_creator="1" android:layout_marginBottom="43dp"
            app:layout_constraintLeft_toLeftOf="@+id/btnSnareDrum"
            app:layout_constraintTop_toTopOf="@+id/ViewLearningState" android:layout_marginLeft="16dp"/>
    <Button
            android:text="bass drum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnBassDrum"
            android:layout_marginEnd="8dp"
            tools:layout_constraintRight_creator="1" tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="38dp" android:layout_marginRight="8dp"/>
    <Button
            android:text="hihat drum"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/btnHiHat"
            android:layout_marginStart="12dp"
            tools:layout_constraintBottom_creator="1" app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_constraintLeft_creator="1" android:layout_marginBottom="38dp"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginLeft="12dp"/>
    <TextView
            android:text="learning time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeHiHat"
            android:layout_marginEnd="3dp"
            tools:layout_constraintTop_creator="1" tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/btnHiHat" android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/btnHiHat" android:layout_marginRight="3dp"/>
    <TextView
            android:text="learning time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeSnare"
            android:layout_marginEnd="10dp"
            tools:layout_constraintTop_creator="1" tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/btnSnareDrum" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/btnSnareDrum" android:layout_marginRight="10dp"/>
    <TextView
            android:text="learning time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeBass"
            android:layout_marginEnd="12dp"
            tools:layout_constraintTop_creator="1" tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/btnBassDrum" android:layout_marginRight="12dp"/>
    <TextView
            android:text="deviation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewStdDeviation"
            android:layout_marginStart="37dp"
            app:layout_constraintRight_toLeftOf="@+id/btnStart" tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1" android:layout_marginEnd="37dp" android:layout_marginTop="16dp"
            tools:layout_constraintLeft_creator="1" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/viewInfo" android:layout_marginLeft="37dp"
            android:layout_marginRight="37dp"/>
    <TextView
            android:text="count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewSensorValuesCount"
            android:layout_marginStart="38dp"
            tools:layout_constraintTop_creator="1" android:layout_marginTop="16dp"
            tools:layout_constraintLeft_creator="1" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/viewStdDeviation" android:layout_marginLeft="38dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:id="@+id/viewInfo"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            tools:layout_constraintTop_creator="1" tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1" app:layout_constraintBottom_toTopOf="@+id/viewLockState"
            app:layout_constraintRight_toRightOf="@+id/viewKnockDetected" android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@+id/graph" tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="23dp" app:layout_constraintLeft_toLeftOf="@+id/btnHiHat"
            android:layout_marginLeft="4dp" android:layout_marginRight="4dp"/>
    <TextView
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewKnockDetected" android:layout_marginStart="4dp"
            tools:layout_constraintBottom_creator="1" app:layout_constraintBottom_toBottomOf="@+id/btnHiHat"
            tools:layout_constraintLeft_creator="1" android:layout_marginBottom="65dp"
            app:layout_constraintLeft_toLeftOf="@+id/btnHiHat" android:layout_marginLeft="21dp"/>
    <TextView
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewLockState"
            tools:layout_constraintBottom_creator="1" app:layout_constraintBottom_toTopOf="@+id/btnBassDrum"
            android:layout_marginStart="6dp" tools:layout_constraintLeft_creator="1" android:layout_marginBottom="35dp"
            app:layout_constraintLeft_toLeftOf="@+id/btnBassDrum" android:layout_marginLeft="6dp"/>
    <TextView
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ViewLearningState"
            tools:layout_constraintTop_creator="1" tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/graph" tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"/>


</android.support.constraint.ConstraintLayout>
