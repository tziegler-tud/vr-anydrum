<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.bluefish.anydrum.MainActivity" android:id="@+id/MainCanvas"
        tools:layout_editor_absoluteY="81dp" tools:layout_editor_absoluteX="0dp">

    <com.jjoe64.graphview.GraphView
            android:layout_width="0dp"
            android:layout_height="224dp"
            android:id="@+id/graph"
            android:visibility="visible"
            tools:layout_constraintTop_creator="1" tools:layout_constraintRight_creator="1"
            android:layout_marginStart="45dp" android:layout_marginEnd="45dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sensorValue" tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp" app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:id="@+id/sensorValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            tools:layout_constraintTop_creator="1" android:layout_marginTop="6dp"
            tools:layout_constraintLeft_creator="1" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Snare Drum"
            android:layout_width="120dp"
            android:layout_height="0dp"
            android:id="@+id/btnSnareDrum"
            tools:layout_constraintTop_creator="1" tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1" app:layout_constraintBottom_toBottomOf="@+id/btnBassDrum"
            app:layout_constraintRight_toRightOf="parent" tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="@+id/btnBassDrum"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline" app:layout_constraintGuide_begin="97dp"
                                          android:orientation="horizontal"
                                          tools:layout_editor_absoluteY="97dp" tools:layout_editor_absoluteX="0dp"/>
    <Button
            android:text="start"
            android:layout_width="88dp"
            android:layout_height="50dp"
            android:id="@+id/btnStart"
            android:layout_marginStart="16dp"
            tools:layout_constraintBottom_creator="1" app:layout_constraintBottom_toTopOf="@+id/btnSnareDrum"
            tools:layout_constraintLeft_creator="1" android:layout_marginBottom="25dp"
            app:layout_constraintLeft_toLeftOf="@+id/btnSnareDrum" android:layout_marginLeft="16dp"/>
    <Button
            android:text="bass drum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnBassDrum"
            android:layout_marginEnd="2dp"
            tools:layout_constraintRight_creator="1" tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="38dp" android:layout_marginRight="2dp"
            app:layout_constraintLeft_toRightOf="@+id/btnSnareDrum" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="hihat drum"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/btnHiHat"
            android:layout_marginEnd="7dp"
            app:layout_constraintRight_toLeftOf="@+id/btnSnareDrum" tools:layout_constraintRight_creator="1"
            android:layout_marginRight="7dp" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" tools:layout_constraintBottom_creator="1"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="38dp"/>
    <TextView
            android:text="learning time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeHiHat"
            android:layout_marginEnd="3dp"
            tools:layout_constraintTop_creator="1" tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/btnHiHat" android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/btnHiHat" android:layout_marginRight="3dp"/>
    <TextView
            android:text="learning time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeSnare"
            android:layout_marginEnd="10dp"
            tools:layout_constraintTop_creator="1" tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/btnSnareDrum" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/btnSnareDrum" android:layout_marginRight="10dp"/>
    <TextView
            android:text="learning time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeBass"
            android:layout_marginEnd="12dp"
            tools:layout_constraintTop_creator="1" tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/btnBassDrum" android:layout_marginRight="12dp"/>
    <TextView
            android:text="deviation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewStdDeviation"
            android:layout_marginStart="86dp"
            app:layout_constraintRight_toLeftOf="@+id/viewSensorValuesCount" tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1" android:layout_marginEnd="88dp" android:layout_marginTop="6dp"
            tools:layout_constraintLeft_creator="1" app:layout_constraintLeft_toLeftOf="@+id/graph"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="86dp"
            android:layout_marginRight="88dp"/>
    <TextView
            android:text="count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewSensorValuesCount"
            android:layout_marginEnd="28dp"
            tools:layout_constraintTop_creator="1" tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/graph" android:layout_marginTop="6dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginRight="28dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewInfo" tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/btnStart" android:layout_marginStart="14dp"
            tools:layout_constraintLeft_creator="1" android:layout_marginBottom="-9dp"
            app:layout_constraintLeft_toLeftOf="@+id/btnStart" android:layout_marginLeft="-250dp"/>


</android.support.constraint.ConstraintLayout>
